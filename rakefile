require 'rake/testtask'
task :default => :test
task :test do
  Dir.glob('**/test_*.rb').each { |file| require File.expand_path file, __dir__}
  Dir.glob('**/*_test.rb').each { |file| require File.expand_path file, __dir__}
end

task :default => :test

desc 'Generates a coverage report'
task :coverage do
  ENV['COVERAGE'] = 'true'
  Rake::Task['test'].execute
end