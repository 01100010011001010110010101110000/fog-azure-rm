require 'rake/testtask'
task default: :test
task :test do
  ENV['COVERAGE'] = nil
  Dir.glob('**/test_*.rb').each { |file| require File.expand_path file, __dir__ }
end

desc 'Generates a coverage report for minitest-cases'
task :coverage do
  ENV['COVERAGE'] = 'true'
  Dir.glob('**/test_*.rb').each { |file| require File.expand_path file, __dir__ }
end
